@model IEnumerable<Capstone6TaskList.Models.Task>

@{
    ViewBag.Title = "Tasks";
}

<h2>Tasks</h2>

<p>
    @Html.ActionLink("Add Tasks", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompletionStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompletionStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TaskID }) |
            @Html.ActionLink("Details", "Details", new { id = item.TaskID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TaskID }, new { @class = "btn btn-default", @onclick = "return Delete()" })
        </td>
    </tr>
}

</table>
<script>
    function Delete() {
        if (!confirm("are you sure you want to delete?")) {
            return false;
        }
    }
</script>
